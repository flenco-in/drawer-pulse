<?xml version='1.0' encoding='utf-8'?>
<widget id="com.cashdrawer.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CashDrawerApp</name>
    <description>Cash Drawer Opener for iOS and Android</description>
    <author email="dev@cordova.apache.org" href="https://cordova.apache.org">
        Apache Cordova Team
    </author>
    <content src="index.html" />

    <!-- Network Access -->
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-navigation href="http://*/*" />
    <allow-navigation href="https://*/*" />

    <!-- iOS-specific settings for performance -->
    <platform name="ios">
        <preference name="WKWebViewOnly" value="true" />
        <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />

        <!-- Performance optimizations -->
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="SplashScreenDelay" value="500" />
        <preference name="FadeSplashScreenDuration" value="300" />
        <preference name="ShowSplashScreenSpinner" value="false" />

        <!-- WebView settings -->
        <preference name="AllowInlineMediaPlayback" value="false" />
        <preference name="MediaTypesRequiringUserActionForPlayback" value="none" />
        <preference name="AllowsAirPlayForMediaPlayback" value="true" />
        <preference name="DisallowOverscroll" value="true" />
        <preference name="EnableViewportScale" value="false" />
        <preference name="AllowBackForwardNavigationGestures" value="false" />

        <!-- iOS 14+ optimizations -->
        <preference name="LimitsNavigationsToAppBoundDomains" value="false" />
        <preference name="InspectableWebview" value="true" />

        <!-- Deployment target -->
        <preference name="deployment-target" value="13.0" />
    </platform>

    <!-- Android-specific settings -->
    <platform name="android">
        <preference name="android-minSdkVersion" value="24" />
        <preference name="android-targetSdkVersion" value="34" />
        <preference name="android-compileSdkVersion" value="34" />

        <!-- Performance -->
        <preference name="SplashScreenDelay" value="500" />
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="SplashMaintainAspectRatio" value="true" />

        <!-- WebView -->
        <preference name="AndroidXEnabled" value="true" />
        <preference name="GradlePluginGoogleServicesEnabled" value="false" />

        <!-- Network -->
        <preference name="AndroidInsecureFileModeEnabled" value="true" />
    </platform>

    <!-- General preferences -->
    <preference name="Orientation" value="default" />
    <preference name="Fullscreen" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="BackgroundColor" value="#ffffffff" />
    <preference name="HideKeyboardFormAccessoryBar" value="false" />
    <preference name="KeyboardDisplayRequiresUserAction" value="false" />
</widget>
